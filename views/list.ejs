<%- include("header"); -%>

    <div id="heading" class="box">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
            <% newListItems.forEach(function(todo){ %>
            <form id="checkboxForm" action="/delete" method="post">

                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=todo._id%>" onchange="submit()">
                    <p><%= todo.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%=listTitle%>"></input>
            </form>
            <% }) %>
            
        <form action="/" method="post">

            <input type="text" name="newItem" placeholder="Whats in your mind?" autocomplete="off">
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    
    </div>
    
<%- include("footer"); -%>

    


